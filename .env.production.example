# Production Environment Configuration for Car Customer Connect
# Copy this file to .env.production and fill in your actual values

# Supabase Configuration
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-supabase-anon-key

# Facebook App Configuration (Required for Privacy Compliance)
VITE_FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# Application Configuration
VITE_APP_URL=https://your-domain.com
VITE_API_BASE_URL=https://your-domain.com/api

# Privacy Compliance URLs (Required for Facebook App Review)
VITE_PRIVACY_POLICY_URL=https://your-domain.com/privacy-policy
VITE_DATA_DELETION_URL=https://your-domain.com/data-deletion
VITE_DATA_DELETION_CALLBACK_URL=https://your-domain.com/api/facebook/data-deletion-callback

# Contact Information (Required for Privacy Policy)
VITE_COMPANY_NAME=Your Company Name
VITE_COMPANY_EMAIL=privacy@your-domain.com
VITE_SUPPORT_EMAIL=support@your-domain.com
VITE_COMPANY_ADDRESS=Your Company Address
VITE_COMPANY_PHONE=+1-XXX-XXX-XXXX

# Security Configuration
VITE_ENVIRONMENT=production
VITE_DEBUG_MODE=false

# Analytics (Optional)
VITE_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# Error Reporting (Optional)
VITE_SENTRY_DSN=your-sentry-dsn

# Email Configuration (for notifications)
SMTP_HOST=your-smtp-host
SMTP_PORT=587
SMTP_USER=your-smtp-username
SMTP_PASS=your-smtp-password
SMTP_FROM=noreply@your-domain.com

# Deployment Configuration
BUILD_PATH=dist
NODE_ENV=production
